{
    "version": 3,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_MAKE_PROGRAM": "ninja",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/extern/vcpkg"
            }
        },
        {
            "name": "debug",
            "inherits": "common",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "common",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-x64-windows",
            "inherits": "debug",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "release-x64-windows",
            "inherits": "release",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "debug-x86-windows",
            "inherits": "debug",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows"
            }
        },
        {
            "name": "debug-arm64-macos",
            "inherits": "debug",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-macos"
            }
        },
        {
            "name": "debug-arm64-android",
            "inherits": "debug",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                "CONFIG_ANDROID_TRIPLET": "arm64-android",
                "VCPKG_TARGET_TRIPLET": "arm64-android",
                "ANDROID_NDK_HOME": "$env{ANDROID_NDK_HOME}",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-26"
            }
        },

        {
            "name": "release-x86-windows",
            "inherits": "release",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows"
            }
        },
        {
            "name": "release-arm64-macos",
            "inherits": "release",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-macos"
            }
        },
        {
            "name": "release-arm64-android",
            "inherits": "release",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                "CONFIG_ANDROID_TRIPLET": "arm64-android",
                "VCPKG_TARGET_TRIPLET": "arm64-android",
                "ANDROID_NDK_HOME": "$env{ANDROID_NDK_HOME}",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-26"
            }
        }
    ]
}